<div class="container">
    <div class="row">
        <div class="jumbotron">
            <h1>Burger Time</h1>
        </div>
        <div class="col-6 text-center">
            <div class="row">
                {{#each burgerdata}}
                {{#unless this.devoured}}
                <div class="col-9 text-center">
                    <pre>{{this.id}}, {{this.burger_name}}</pre>
                </div>
                <div class="col-3 text-center">
                    <form method="POST" action="/burgers/update?_method=PUT" class="button-size">
                        <input type="hidden" name="burger_id" type="text" value={{this.id}}>
                        <br>
                        <button type="submit" class="btn btn-default">Devour</button>
                    </form>
                </div>
                {{/unless}}
                {{/each}}
            </div>
        </div>
        <div class='col-6 text-center'>
            {{#each burgerdata}}
            {{#if this.devoured}}
            <input class="form-control" type="text" placeholder="{{this.id}}, {{this.burger_name}}" readonly>
            {{/if}}
            {{/each}}
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-12 text-center enter_section">
            <form action="/burgers/create" method="POST">
                <input type="text" name="burger_name" class="form-control" value="" id="enter_text">
                <button type="submit" class="btn btn-default" id="text-enter-button">submit</button>
            </form>
            <p>Add a burger yo</p>
        </div>
    </div>
</div>